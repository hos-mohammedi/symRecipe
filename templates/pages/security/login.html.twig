{% extends 'base.html.twig' %}

{% block title %}Connexion -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">


		{% if error %}
			<div class="alert alert-dismissible alert-danger">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			</div>
		{% endif %}


		<h1 class="mt-4">Connexion</h1>
		<form action=" {{ path('security.login') }} " method="POST" class="form-group">
			<div>
				<label for="username" class="form-label">Email</label>
				<input type="email" name="_username" id="username" class="form-control" value="{{last_username}}">
			</div>
			<div>
				<label for="password" class="form-label">Mot de passe</label>
				<input type="password" name="_password" id="password" class="form-control">
			</div>
			<button type='submit' class="btn btn-primary mt-3">Me connecter</button>
		</form>
	</div>
{% endblock %}
